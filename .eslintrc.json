{
    "extends": [
        "react-app",
        "react-app/jest",
        "airbnb"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 400
            }
        ],
        "max-lines-per-function": [
            "error",
            {
                "max": 75
            }
        ],
        "react/react-in-jsx-scope": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "react/jsx-props-no-spreading": "off",
        "no-console": "warn",
        "react/prop-types": "off"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    }
}